<!DOCTYPE html>
<html lang="en">

<%- include("partials/head.ejs") %>

    <body>

        <%- include("partials/header.ejs") %>

            <main id="login-main" class="login-main">
            <div class="title-login">
                <h2 class="h2-register">Crea tu cuenta</h2>
            </div>
            <section class="section-login">
                <form action="/users/login" method="post">
                    <div class="control-form">
                        <label for="email">Correo electronico</label>
                        <input type="email" placeholder="Escribe tu email" class="control" name="email" id="email">
                    </div>
                    <div class="control-form">
                        <label for="password">contraseña</label>
                        <input type="password" placeholder="Escribe tu contraseña" class="control" name="contrasenia"
                            id="password">
                    </div>
                    <input class="btn-login" type="submit" value="Ingresar">
                </form>
            </section>
            </main>
    </body>
</html>